new.js.erb


_new.html.erb
<h2>Add Books</h2>
<% form_for @book do |f| %> 
  <%= f.error_messages %>
  <div class="field">
    <%= f.label :name , "Book Name" %><br />
    <%= f.text_field :name %> 
  </div>
  <div class="field">
    <%= f.label :author, "Author Name" %><br /> 
    <%= f.text_field :author %>
  </div>
  <div class="actions">
  <%= f.submit "Create" %>
  </div> 
<% end %>
<br>
<br>
<b><%= link_to "Library Home", books_path %></b>