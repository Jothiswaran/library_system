<% if !@searchresults.empty? %>
<table border="1" style="width:100%">
<tr>
    <th>
        ID
    </th>
    <th>
        Book Name
    </th>
    <th>
        Author Name
    </th>
    <th>
        Availability
    </th>
  </tr>
<% @searchresults.each do |search| %>
  <tr>
    <td>
      <%= search.id %>
    </td>
    <td>
      <%= search.name %>
    </td>
    <td>
      <%= search.author %>
    </td>
    <td>
      <% if search.available %>
        Y
        </td>
        <% if current_user.admin? %>
          <td><%= link_to "delete",search, :method => :delete, :confirm => "You sure?" %></td>
        <% else %>
          <td><%= link_to "issue", issue_path(:book_id => search.id) %></td>
        <% end %>
      <% else %>
        N
        </td>
        <td></td>
      <% end %>

  </tr>
<% end %> 
</table>
<% else %>
<p> No Matching Books are found.</p>
<% end %>